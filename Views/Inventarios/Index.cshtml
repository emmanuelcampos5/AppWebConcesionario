@*
//Fecha Creacion: 20-05-2024
//Funcion: Contener la vista con todos los componentes para visualizar el inventario.
//Fecha Ultima Modificacion:28-05-2024
//Responsable: Emmanuel Campos //Razon: Colocar de forma correcta el asp action de crear nuevo vehiculo*@





@model List<(Inventario inventario, Vehiculo vehiculo)>

@{
    ViewData["Title"] = "Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="formularioCreate">


    <h1>Inventario</h1>
    <div>
        <a asp-action="Create" asp-controller="Vehiculo" class="btn btn-primary">Nuevo Vehiculo</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id Vehículo</th>
                <th>Imagen</th>
                <th>Nombre Vehículo</th>
                <th>Cantidad</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.inventario.idVehiculo</td>
                    <td>
                        <img src="@item.vehiculo.imagenUrl" style="max-width: 100px;" />
                    </td>

                    <td>@item.vehiculo.modeloVehiculo</td>
                    <td>@item.inventario.cantidadVehiculos</td>
                    <td>@item.vehiculo.estadoActivo</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.inventario.idVehiculo" class="btn btn-dark" style="color: ghostwhite;">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                        </a>
                        <a asp-action="Details" asp-controller="Vehiculo" asp-route-id="@item.inventario.idVehiculo" class="btn btn-dark" style="color: ghostwhite;">
                            
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>


<style>
    .btn {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }
</style>
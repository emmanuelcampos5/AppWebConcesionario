@model AppWebConcesionario.Models.Promocion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="formularioCreate">

    <h4>Promocion</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="idVehiculo" class="control-label"></label>
                    <select asp-for="idVehiculo" class="form-control" asp-items="@(ViewData["Vehiculos"] as SelectList)"></select>
                    <span asp-validation-for="idVehiculo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="precioPromocion" class="control-label"></label>
                    <input asp-for="precioPromocion" class="form-control" />
                    <span asp-validation-for="precioPromocion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lugarPromocion" class="control-label"></label>
                    <select asp-for="lugarPromocion" class="form-select">
                        <option value="">Seleccione una Provincia</option>
                        <option value="Puntarenas">Puntarenas</option>
                        <option value="Guanacaste">Guanacaste</option>
                        <option value="Alajuela">Alajuela</option>
                        <option value="Heredia">Heredia</option>
                        <option value="Cartago">Cartago</option>
                        <option value="Sanjose">Sanjose</option>
                        <option value="Limon">Limon</option>
                    </select>
                    <span asp-validation-for="lugarPromocion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-3" />
                    <a asp-action="Index" class="btn btn-dark mt-3">Volver</a>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

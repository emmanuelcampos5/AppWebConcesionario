@using System.Security.Claims
@model AppWebConcesionario.Models.Factura

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container" id="formularioCreate">
    <h4>Detalles de Factura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            IdFactura
        </dt> 
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idFactura)
        </dd>
        @if(User.Identity.IsAuthenticated && User.FindFirstValue("Rol").Equals("1"))
        {
            <dt class="col-sm-2">
                Id Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.idUsuario)
            </dd>
        }
        
        <dt class = "col-sm-2">
           SubTotal:
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.subtotal)
        </dd>
        <dt class = "col-sm-2">
            Descuento:
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.montoDescuento)
        </dd>
        <dt class = "col-sm-2">
            Impuesto:
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.montoImpuesto)
        </dd>
        <dt class = "col-sm-2">
            Total de Factura:
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.totalFactura)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Facturacion:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaFactura)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Pago:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tipoPago)
        </dd>
        <dt>
            Vehiculos Comprados:
            
        </dt>
        <dd>

            @Html.Raw(ViewBag.Mensaje)

        </dd>
    </dl>
    <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>

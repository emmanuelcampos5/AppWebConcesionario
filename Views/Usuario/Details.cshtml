@model AppWebConcesionario.Models.Usuario

@using System.Security.Claims;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="formularioCreate">

    <h1>Detalles del Perfil</h1>

    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.idUsuario)
            </dd>
            <dt class="col-sm-2">
               Nombre de Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombreUsuario)
            </dd>
            @if (User.FindFirstValue("Rol").Equals("2"))
            {
                <dt class="col-sm-2">
                   Cedula: 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cedulaUsuario)
                </dd>
            }
            
            <dt class="col-sm-2">
               Telefono: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.telefonoUsuario)
            </dd>
            <dt class="col-sm-2">
               Email: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.correoUsuario)
            </dd>
            
            @if (User.FindFirstValue("Rol").Equals("2"))
            {
                <dt class="col-sm-2">
                   Residencia
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.lugarResidencia)
                </dd>
                <dt class="col-sm-2">
                    Estado: 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.estadoActivo)
                </dd>
                <dt class="col-sm-2">
                    Envio de Promociones: 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.estadoSuscripcion)
                </dd>
            }

           
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-controller="Usuario" asp-route-id="@Model.idUsuario" class="btn btn-primary mt-3">Editar</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-dark mt-3">Home</a>
    </div>



</div>

@using System.Security.Claims
@model AppWebConcesionario.Models.Vehiculo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" >
    <form id="formularioCreate" class="row">
        <div class="col-md-6">
            <h4>Vehiculo</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.idVehiculo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.idVehiculo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.marcaVehiculo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.marcaVehiculo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.modeloVehiculo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.modeloVehiculo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.tipoCombustible)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.tipoCombustible)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.precioVehiculo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.precioVehiculo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.estadoActivo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.estadoActivo)
                </dd>
            </dl>

            <div>
                @if (User.Identity.IsAuthenticated && User.FindFirstValue("Rol").Equals("1"))
                {
                    <a class="btn btn-dark " asp-action="Index" asp-controller="Inventarios">Volver</a>
                }
                else
                {
                    <a class="btn btn-dark " asp-action="Index" asp-controller="Vehiculo">Volver</a>
                }

            </div>


        </div>
        
        <div class="col-md-6">
            <!-- Contenedor para la imagen del vehículo -->
            <div class="image-container">
                <img src="@Model.imagenUrl" alt="Imagen del vehículo" style="max-width: 100%;">
            </div>
        </div>
    
    </form>
</div>


 <style>
    #formularioCreate {
        background-color: whitesmoke;
        border: 1px solid #dedede;
        border-radius: 1em;
        box-shadow: 5px 5px 5px rgba(25,0,0,25);
        padding: 1em;
        margin: 0 auto;
        width: auto;
        text-align: left;
        color: #393939;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

            
    .image-container {
        float: right; /* Coloca el contenedor a la derecha */
        width: 50%; /* Ancho del contenedor */
        margin-left: 20px; /* Margen izquierdo para separarlo del contenido principal */
    }

    .image-container img {
       max-width: 100%; /* Ajusta el tamaño máximo de la imagen al contenedor */
       height: auto; /* Permite que la altura se ajuste automáticamente */
    }
   
</style>
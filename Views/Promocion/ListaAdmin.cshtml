@model List<(Vehiculo, Promocion)>

@{
    ViewData["Title"] = "ListaAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" id="formularioCreate">

    <p>
        <a asp-action="Create" class="btn btn-primary mt-3">Crear/Editar Promocion</a>
    </p>
    <table class="table">
        <h1>Lista Promociones</h1>
        <thead>
            <tr>
                <th>
                    Modelo Vehiculo
                </th>
                <th>
                    Imagen
                </th>
                <th>
                    Precio de Promocion
                </th>
                <th>
                    Precio Original
                </th>
                <th>
                    Lugar de Promocion
                </th>
                <th>
                    Estado
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item1.modeloVehiculo)
                    </td>
                    <td>
                        <img src="@item.Item1.imagenUrl" style="max-width: 100px;" />
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Item2.precioPromocion)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Item1.precioVehiculo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item2.lugarPromocion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item1.estadoActivo)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Item2.idVehiculo" class="btn btn-dark" style="color: ghostwhite;">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>




<style>
    .btn {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }
</style>
@model AppWebConcesionario.Models.Inventario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4 style="color: white;">Inventario</h4>
<hr />
<div class="row" style="color: white;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label" style="color: black;">ID</label>
                <input asp-for="idVehiculo" class="form-control" style="color: white;" />
                <span asp-validation-for="idVehiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" style="color: black;"> CANTIDAD DE VEHICULOS</label>
                <input asp-for="cantidadVehiculos" class="form-control" style="color: white;" />
                <span asp-validation-for="cantidadVehiculos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger" style="color: white;">Volver a Lista</a>
</div>



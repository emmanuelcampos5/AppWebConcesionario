@model IEnumerable<AppWebConcesionario.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<div class="container">
    <div class="row">

        <div class="col-sm-12">
            <div class="d-flex flex-row justify-content-center flex-wrap">
            
            @{
                int contador = 0;
            }

            @foreach (var item in Model)
            {
               
                        <div class="card m-2" style="width: 18rem;">
                            <img src=@item.imagenUrl class="card-img-top" alt="@item.modeloVehiculo">
                            <div class="card-body">
                                <h5 class="card-title">@item.marcaVehiculo</h5>
                                <p>@item.modeloVehiculo</p>
                                <p>Precio: $@item.precioVehiculo</p>
                                @Html.ActionLink("Agregar al carrito", "Create", "Carrito", new { idVehiculo = item.idVehiculo, marcaVehiculo = item.marcaVehiculo, modeloVehiculo = item.modeloVehiculo, precioVehiculo = item.precioVehiculo }, new { @class = "btn btn-sm btn-outline-secondary" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.idVehiculo }, new { @class = "btn btn-sm btn-outline-secondary"} )
                            </div>
                        </div>
                
            }


            </div>
        </div>


    </div>
</div>

@{
    ViewData["Title"] = "RealizarConsulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-5 col-9 col-xl-3 formulario position-absolute top-50 start-50 translate-middle">
        <h1 class="text-center"> Realizar Consulta </h1>

        @*Mensaje cuando el usuario fue creado*@
        @if (TempData["MensajeCreado"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                <strong>@TempData["MensajeCreado"]</strong>
            </div>
        }

        @*Mensaje en caso de error*@
        @if (TempData["MensajeError"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                <strong>@TempData["MensajeError"]</strong>
            </div>
        }

        <form asp-action="RealizarConsulta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-4">
                <label id="mensaje" class="control-label"></label>
                <textarea name="mensaje" placeholder="Consulta! Nuestros asesores te ayudaran!" class="form-control texto-mensaje"></textarea>
                
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Enviar" class="btn btn-success boton-enviar" />
                <a type="button" class="btn btn-danger" asp-controller="Vehiculo" asp-action="Index">Volver</a>
            </div>
        </form>


    </div>
</div>
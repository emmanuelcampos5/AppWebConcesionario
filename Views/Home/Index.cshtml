@{
    ViewData["Title"] = "Home Page";
}

<style>

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }


</style>

<div class="container-fluid text-center">
    <div class="row">
        <div class="col-sm-12">

            @if(TempData["Mensaje"] != null)
            {
                <div class="modal" tabindex="-1" id="mensajeModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Envio de Factura</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @TempData["Mensaje"]
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-center align-items-center container" style="min-height: 100vh;">
                
                <video autoplay loop muted plays-inline class="background-clip">
                    <source src="~/css/video/PagPrincipal.mp4" type="video/mp4">
                </video>

                
                <div class="welcome" style=" width:auto; padding: 20px;">
                    <br /><br /> <br /><br />
                    
                    <h4 style="color: white" class="subTit mt-5" >Bienvenido</h4>
                    <p style="color: white" class="subTit mt-2">Puedes ver nuestro catalogo de autos usados disponibles en todas nuestras sedes</p>
                    <a class="btn btn-outline-light mt-2" asp-area="" asp-controller="Vehiculo" asp-action="Index">
                       Ver Lista
                    </a>
                    @if(User.Identity.IsAuthenticated == false)
                    {
                        <a class="btn btn-outline-danger ms-4 mt-2" asp-area="" asp-controller="Usuario" asp-action="Login">
                            Iniciar sesion
                        </a>
                    }
                    
                    
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var mensaje = '@TempData["Mensaje"]';
        if (mensaje) {
            var myModal = new bootstrap.Modal(document.getElementById('mensajeModal'));
            myModal.show();
        }
    });
</script>


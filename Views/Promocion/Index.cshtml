@model List<(Vehiculo, Promocion)>

<body class="specific-page">


    <div class="container">
        <div class="row">
            <div class="col-sm-12">


                <div class="carousel-container mx-auto text-center">
                    <!-- 1. Centrar horizontalmente el carrusel -->
                    <!-- Carousel start -->
                    <div id="marcaCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner" style="align-items:center;">
                            <!-- 2. Centrar horizontalmente los elementos internos del carrusel -->
                            <!-- Modified: Added the class 'active' to the first item -->
                            <div class="carousel-item active">

                                <img src="~/css/img/iconos/logo_con_nombre.png" class="brand-icon mt-3" alt="" data-marca="All" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/alajuela.png" class="brand-icon mt-3" alt="Alajuela" data-marca="Alajuela" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/cartago.png" class="brand-icon mt-3" alt="Cartago" data-marca="Cartago" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/guanacaste.png" class="brand-icon mt-3" alt="Guanacaste" data-marca="Guanacaste" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/heredia.png" class="brand-icon mt-3" alt="Heredia" data-marca="Heredia" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/limon.png" class="brand-icon mt-3" alt="Limon" data-marca="Limon" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/puntarenas.png" class="brand-icon mt-3" alt="Puntarenas" data-marca="Puntarenas" id="logo" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/css/provincias/sanjose.png" class="brand-icon mt-3" alt="Sanjose" data-marca="Sanjose" id="logo" />
                            </div>
                            
                        </div>
                        <!-- Carousel controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#marcaCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#marcaCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <!-- Carousel end -->
                </div>



                <div class="d-flex flex-row justify-content-center flex-wrap mt-4">
                    @foreach (var item in Model)
                    {
                        
                            if (item.Item1.estadoActivo)
                            {

                                <div class="flip-card">
                                    <div class="flip-card-inner">
                                        <div class="flip-card-front">
                                            <p class="title"></p>
                                            <img src="@item.Item1.imagenUrl" alt="@item.Item1.modeloVehiculo">
                                        </div>
                                        <div class="flip-card-back">
                                            <div>
                                                <p>@item.Item1.marcaVehiculo</p>
                                                <p>@item.Item1.modeloVehiculo</p>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-ev-station" viewBox="0 0 16 16">
                                                    <path d="M3.5 2a.5.5 0 0 0-.5.5v5a.5.5 0 0 0 .5.5h5a.5.5 0 0 0 .5-.5v-5a.5.5 0 0 0-.5-.5zm2.131 10.46H4.14v-.893h1.403v-.505H4.14v-.855h1.49v-.54H3.485V13h2.146zm1.316.54h.794l1.106-3.333h-.733l-.74 2.615h-.031l-.747-2.615h-.764z" />
                                                    <path d="M3 0a2 2 0 0 0-2 2v13H.5a.5.5 0 0 0 0 1h11a.5.5 0 0 0 0-1H11v-4a1 1 0 0 1 1 1v.5a1.5 1.5 0 0 0 3 0V4a.5.5 0 0 0-.146-.354l-.5-.5a.5.5 0 0 0-.707 0l-.5.5A.5.5 0 0 0 13 4v3c0 .71.38 1.096.636 1.357l.007.008c.253.258.357.377.357.635v3.5a.5.5 0 1 1-1 0V12a2 2 0 0 0-2-2V2a2 2 0 0 0-2-2zm7 2v13H2V2a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1" />
                                                </svg>
                                                <span>@item.Item1.tipoCombustible</span>
                                            </div>
                                            <div>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pin-map-fill" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M3.1 11.2a.5.5 0 0 1 .4-.2H6a.5.5 0 0 1 0 1H3.75L1.5 15h13l-2.25-3H10a.5.5 0 0 1 0-1h2.5a.5.5 0 0 1 .4.2l3 4a.5.5 0 0 1-.4.8H.5a.5.5 0 0 1-.4-.8z" />
                                                    <path fill-rule="evenodd" d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999z" />
                                                </svg>
                                                <span>@item.Item2.lugarPromocion</span>
                                            </div>
                                            <p style="text-align:center"><s>$@item.Item1.precioVehiculo</s>  $@item.Item2.precioPromocion</p>
                                            <a href="@Url.Action("Create", "Carrito", new { idVehiculo = item.Item1.idVehiculo, marcaVehiculo = item.Item1.marcaVehiculo, modeloVehiculo = item.Item1.modeloVehiculo, precioVehiculo = item.Item2.precioPromocion, foto = item.Item1.imagenUrl })" class="btn btn-sm btn-outline-secondary add-to-cart-btn">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        
                    }
                </div>
            </div>
        </div>
    </div>



    <div class="toast celeste-toast" role="alert" aria-live="assertive" aria-atomic="true" id="cartToast" style="position: fixed; top: 20px; right: 20px; z-index: 1050;">
        <div class="toast-header">
            <strong class="me-auto">Carrito Actualizado</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Producto añadido al carrito exitosamente.
        </div>
    </div>



</body>




<script>
    document.addEventListener("DOMContentLoaded", function () {
        const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();
                const url = this.href;

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const toastElement = document.getElementById('cartToast');
                            var toast = new bootstrap.Toast(toastElement, {
                                delay: 2000 // 2000 milisegundos = 2 segundos
                            });
                            toast.show();
                        }
                    })
                    .catch(error => console.error('Error adding to cart:', error));
            });
        });

        const marcaCarousel = new bootstrap.Carousel(document.getElementById('marcaCarousel'), {
            interval: false // desactiva la transición automática del carousel
        });

        const lugarIcons = document.querySelectorAll('#marcaCarousel img');
        lugarIcons.forEach(icon => {
            icon.addEventListener('click', function () {
                const lugar = this.dataset.marca; // Utilizamos 'data-marca'
                if (lugar.toLowerCase() === 'all') {
                    // Si el lugar es "All", mostramos todos los vehículos
                    const vehicles = document.querySelectorAll('.flip-card');
                    vehicles.forEach(vehicle => {
                        vehicle.style.display = 'block';
                    });
                } else {
                    filterVehiclesByLugar(lugar);
                }
            });
        });

        function filterVehiclesByLugar(lugar) {
            const vehicles = document.querySelectorAll('.flip-card');
            vehicles.forEach(vehicle => {
                const lugarPromocion = vehicle.querySelector('.flip-card-back span:nth-child(2)').textContent.trim();
                if (lugarPromocion.toLowerCase() === lugar.toLowerCase()) {
                    vehicle.style.display = 'block';
                } else {
                    vehicle.style.display = 'none';
                }
            });
        }
    });
</script>

<style>
    .celeste-toast {
        background-color: cornflowerblue;
        color: #000;
    }

    .flip-card {
        background-color: transparent;
        width: 190px;
        height: 254px;
        perspective: 1000px;
        font-family: sans-serif;
        margin: 10px; /* Añade margen para separar entre tarjetas */
    }

    .title {
        font-size: 1.5em;
        font-weight: 900;
        text-align: center;
        margin: 0;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.6); /* Sombra difuminada */
        position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 1rem; /* Esquinas redondeadas */
    }

    .flip-card-front {
        background: linear-gradient(120deg, #333 60%, #444 88%, #555 40%, #666 48%); /* Colores oscuros */
        color: #fff; /* Texto en blanco */
    }

    .flip-card-back {
        background: linear-gradient(120deg, #444 30%, #555 88%, #666 40%, #777 78%); /* Colores oscuros */
        color: #fff; /* Texto en blanco */
        transform: rotateY(180deg);
    }

    .flip-card-front img {
        width: 100%;
        height: 98%;
        object-fit: cover;
        border-radius: 1rem 1rem 1rem 1rem; /* Redondea todas las esquinas */
    }

    .add-to-cart-btn {
        width: auto; /* Ancho automático basado en el contenido */
        padding: 5px 20px; /* Añade padding para hacerlo más visual */
        display: block; /* Hace que el botón sea un bloque para centrar fácilmente */
        margin: 10px auto; /* Centra el botón horizontalmente y añade margen vertical */
    }


    .carousel-container {
        margin-bottom: 20px; /* Espacio entre el carrusel y la lista de vehículos */
        max-width: 45%;
        align-content: center;
        align-items: center;
    }

    /* Modified styles for the carousel to display one item at a time */
    #marcaCarousel .carousel-inner {
        scroll-snap-type: x mandatory; /* Añadido para el desplazamiento suave */
    }

    #marcaCarousel .carousel-item {
        scroll-snap-align: start; /* Añadido para el desplazamiento suave */
    }

        #marcaCarousel .carousel-item img {
            width: 80px; /* Ancho de las imágenes */
            height: 80px; /* Altura de las imágenes */
            object-fit: contain; /* Ajusta las imágenes dentro del contenedor */
            cursor: pointer; /* Cursor de puntero para indicar que son clicables */
        }

        #marcaCarousel .carousel-item #logo {
            width: 140px;
            height: 140px;
            object-fit: contain;
            cursor: pointer;
        }
</style>



@{
    ViewData["Title"] = "OlvidarContraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="container">



    <div class="row">
        <div class="col-md-5 col-9 col-xl-3 formulario position-absolute top-50 start-50 translate-middle">
            <h3>Recuperacion de Contraseña</h3>
            @if (TempData["MensajeCreado"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeCreado"]</strong>
                </div>
            }

            @*Mensaje en caso de error*@
            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeError"]</strong>
                </div>
            }
            <form asp-action="OlvidarContraseña">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="tempCorreo" class="control-label">Email</label>
                    <input type="email" name="tempCorreo" class="form-control" placeholder="dijite el correo electronico" />
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                    <a asp-action="Login" class="btn btn-danger">Volver</a>
                </div>
            </form>
        </div>
    </div>

</div>

